@page
@model WebApp.Identity.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Email"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="text" asp-for="Credential.Email" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="password" asp-for="Credential.Password" />
            </div>
            <div class="row form-check mb-2">
                <div class="col-2">
                    <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Credential.RememberMe"></label>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-5">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>
            <div class="col-5">
                <input class="btn btn-link" type="submit" value="Register" />
            </div>
        </div>
    </form>
</div>