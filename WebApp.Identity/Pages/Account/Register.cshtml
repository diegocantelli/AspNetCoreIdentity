@page
@model WebApp.Identity.Pages.Account.RegisterModel
@{
}

<h3>User Registration</h3>
<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="text" asp-for="RegisterViewModel.Email" />
            </div>
            <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="password" asp-for="RegisterViewModel.Password" />
            </div>
            <span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-5">
                <input class="btn btn-primary" type="submit" value="Register"/>
            </div>
        </div>
    </form>
</div>